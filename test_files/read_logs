' --- Выгрузка логов динамики в Excel ---

' Инициализация Excel для результатов
Set xl = CreateObject("Excel.Application")
xl.Visible = True
xl.DisplayAlerts = False
Set wb = xl.Workbooks.Add
Set ws = wb.Worksheets(1)
ws.Name = "Логи"

' Заголовок
ws.Cells(1, 1).Value = "№"
ws.Cells(1, 2).Value = "Тип"
ws.Cells(1, 3).Value = "Текст"
ws.Range("A1:C1").Font.Bold = True

' Запускаем расчет динамики
Set spFWDynamic = Rastr.FWDynamic

If Not spFWDynamic Is Nothing Then
    nRes = spFWDynamic.Run()
    
    If nRes = 0 Then
        rowNum = 2
        
        ' ResultMessage
        ws.Cells(rowNum, 1).Value = 1
        ws.Cells(rowNum, 2).Value = "ResultMessage"
        ws.Cells(rowNum, 3).Value = spFWDynamic.ResultMessage
        rowNum = rowNum + 1
        
        ' AdditionalInformation
        On Error Resume Next
        additionalInfo = spFWDynamic.AdditionalInformation
        
        If Not IsEmpty(additionalInfo) And additionalInfo <> "" Then
            ' Пробуем разбить на строки
            msgLines = Split(additionalInfo, vbCrLf)
            If UBound(msgLines) = 0 Then msgLines = Split(additionalInfo, vbLf)
            If UBound(msgLines) = 0 Then msgLines = Split(additionalInfo, vbCr)
            
            ' Выгружаем каждую строку
            For i = 0 To UBound(msgLines)
                If Trim(msgLines(i)) <> "" Then
                    ws.Cells(rowNum, 1).Value = rowNum - 1
                    ws.Cells(rowNum, 2).Value = "AdditionalInfo"
                    ws.Cells(rowNum, 3).Value = Trim(msgLines(i))
                    rowNum = rowNum + 1
                End If
            Next
        Else
            ' Если не разбилось, выводим целиком
            ws.Cells(rowNum, 1).Value = 2
            ws.Cells(rowNum, 2).Value = "AdditionalInfo"
            ws.Cells(rowNum, 3).Value = additionalInfo
            rowNum = rowNum + 1
        End If
        
        On Error GoTo 0
        
        ' Форматирование
        ws.Columns.AutoFit
        ws.Columns("C:C").ColumnWidth = 150
        
        totalLines = rowNum - 2
        MsgBox "Выгружено строк: " & totalLines, vbInformation, "Готово"
    Else
        MsgBox "Ошибка расчета FWDynamic (код: " & nRes & ")", vbExclamation, "Ошибка"
    End If
Else
    MsgBox "FWDynamic недоступен", vbCritical, "Ошибка"
End If
