' Скрипт для просмотра всех данных действий в сценарии
Sub ShowAllActionData()
    On Error Resume Next
    
    Set tblEvents = Rastr.Tables("DFWAutoActionScn")
    
    If Not tblEvents Is Nothing Then
        Set colType = tblEvents.Cols("Type")
        Set colName = tblEvents.Cols("Name")
        Set colTimeStart = tblEvents.Cols("TimeStart")
        Set colDT = tblEvents.Cols("DT")
        Set colObjectClass = tblEvents.Cols("ObjectClass")
        Set colObjectProp = tblEvents.Cols("ObjectProp")
        
        Dim msg
        msg = "Действия в сценарии:" & vbCrLf & vbCrLf
        
        For i = 0 To tblEvents.Size - 1
            msg = msg & "Строка " & i & ":" & vbCrLf
            msg = msg & "  Тип = '" & colType.ZS(i) & "'" & vbCrLf
            msg = msg & "  Название = '" & colName.ZS(i) & "'" & vbCrLf
            
            If Not colTimeStart Is Nothing Then
                msg = msg & "  TimeStart = " & colTimeStart.Z(i) & " с" & vbCrLf
            End If
            
            If Not colDT Is Nothing Then
                msg = msg & "  DT (Длительность) = " & colDT.Z(i) & " мс" & vbCrLf
            End If
            
            If Not colObjectClass Is Nothing Then
                msg = msg & "  ObjectClass = '" & colObjectClass.ZS(i) & "'" & vbCrLf
            End If
            
            If Not colObjectProp Is Nothing Then
                msg = msg & "  ObjectProp = '" & colObjectProp.ZS(i) & "'" & vbCrLf
            End If
            
            msg = msg & vbCrLf
        Next
        
        MsgBox msg
    Else
        MsgBox "Таблица DFWAutoActionScn не найдена"
    End If
    
    On Error GoTo 0
End Sub

' Запускаем
Call ShowAllActionData()
